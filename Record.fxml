<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="_rootPane" prefHeight="300.0" prefWidth="600.0" styleClass="background" stylesheets="@application.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Record">
   <top>
      <Label fx:id="currentName" styleClass="label-text" text="Recording For:" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </Label>
   </top>
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="buttonRecordPlayDatabase" mnemonicParsing="false" onAction="#handleRecordPlayDatabase" text="Play Example" />
            <Button fx:id="buttonRecordPlay" mnemonicParsing="false" onAction="#handleRecordPlay" text="Play Your Recording" />
            <Button fx:id="buttonRecordSave" mnemonicParsing="false" onAction="#handleRecordSave" text="Save" />
            <Button fx:id="buttonRecordBack" mnemonicParsing="false" onAction="#handleRecordBack" text="Back" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="buttonRecordRecord" mnemonicParsing="false" onAction="#handleRecordRecord" text="Start Recording" />
            <Label fx:id="recordLabel" text="The recording is 5 seconds long." />
         </children>
      </VBox>
   </center>
</BorderPane>
